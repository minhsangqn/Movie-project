{{> Admin_layout}}
<style>
    ul{list-style-type: none;}
    li{list-style: none;float: left;margin: 5px}
</style>
<div class="col-lg-6">
    <div class="card">
        <div class="card-header">
            <strong class="card-title">Danh Sách Năm</strong>
            <a href="/admin/addYear">
                <button type="button" class="btn btn-success btn-sm" style="float: right">
                    <i class="fa fa-plus"></i>
                </button>
            </a>
        </div>
        <div class="card-body">
            <table class="table">
                {{#if err }}
                    <div class="alert alert-danger" role="alert">
                        <li>{{ err }}</li>
                    </div>
                {{/if}}
                {{#if success }}
                <div class="alert alert-success" role="alert">
                    <li>{{ success }}</li>
                </div>
                {{/if}}
                <thead class="thead-dark">
                <tr>
                    <th scope="col"><i class="fa fa-list"></i></th>
                    <th scope="col">ID Năm</th>
                    <th scope="col">Năm phát hành</th>
                    <th>Tuỳ chọn</th>
                </tr>
                </thead>
                <tbody>
                {{# each item}}
                <tr>
                    <th scope="row">#</th>
                    <td style="display: none">{{this._id}}</td>
                    <td>{{this.year_id}}</td>
                    <td>{{this.year_name}}</td>
                    <td style="text-align: center">
                        <ul>
                            <li>
                                <a href="/admin/editYear/{{year_id}}"><i class="fa fa-pencil"></i></a>
                            </li>
                            <li>
                                <a onclick="return confirm('Bạn có chắc muốn xóa')" href="/admin/deleteYear/{{_id}}"><i class="fa fa-trash-o"></i></a>
                            </li>
                        </ul>
                    </td>
                </tr>
                {{/each}}
                </tbody>
            </table>

        </div>
    </div>
</div>
{{> Admin_footer}}